{
	"name": "homelab",
	"version": "1.0.0",
	"author": "Noah Tigner",
	"description": "Noah Tigner's Home Server Setup",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/noahtigner/homelab.git"
	},
	"keywords": [
		"homelab",
		"pi-hole",
		"pihole",
		"docker",
		"api"
	],
	"scripts": {
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"prepare": "husky install"
	},
	"validate-branch-name": {
		"pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release|dependabot)/.+$"
	},
	"devDependencies": {
		"husky": "^8.0.0",
		"prettier": "^3.1.0",
		"validate-branch-name": "^1.3.0"
	}
}
